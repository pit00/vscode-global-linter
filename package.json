{
    "name": "global-regex",
    "displayName": "Global Linter",
    "description": "Regex linter rules for any language.",
    "repository": {
        "type": "git",
        "url": "https://github.com/pit00/vscode-global-linter"
    },
    "bugs": {
        "url": "https://github.com/pit00/vscode-global-linter/issues"
    },
    "keywords": [
        "linter",
        "linters",
        "regex",
        "highlight",
        "problems"
    ],
    "version": "0.4.1",
    "license": "MIT",
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.0.0",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5"
    },
    "publisher": "pit00",
    "galleryBanner": {
        "theme": "dark"
    },
    "icon": "assets/icon.png",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onLanguage"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "global-linter",
            "properties": {
                "global-linter.rules": {
                    "type": "array",
                    "minLength": 1,
                    "default": [],
                    "items": {
                        "required": [
                            "name",
                            "pattern"
                        ],
                        "properties": {
                            "name": {
                                "type": "string",
                                "minLength": 1,
                                "description": "A unique diagnostic code for this rule (in snake-case by convention)."
                            },
                            "languages": {
                                "type": "array",
                                "minLength": 1,
                                "description": "Languages this rule applies to. If omitted, applies to any language mode."
                            },
                            "pattern": {
                                "type": "string",
                                "minLength": 1,
                                "description": "A regular expression pattern for this rule."
                            },
                            "flags": {
                                "type": "string",
                                "minLength": 1,
                                "description": "Flags to enable on the pattern. If omitted, default is \"g\""
                            },
                            "message": {
                                "type": "string",
                                "minLength": 1,
                                "description": "The diagnostic message to display for this rule, default is severity"
                            },
                            "severity": {
                                "type": "string",
                                "enum": [
                                    "Error",
                                    "Warning",
                                    "Information",
                                    "Hint"
                                ],
                                "default": "Warning",
                                "description": "The severity of the generated diagnostic for this rule."
                            }
                        }
                    },
                    "description": "An array of diagnostic rule definitions."
                },
                "global-linter.exclude": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "An array of filesystem glob patterns to be excluded from processing."
                }
            }
        }
    },
    "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
